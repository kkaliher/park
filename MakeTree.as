class MakeTree{	private var stemHeight:Number;	private var stemStartHeight:Number;	private var stemEndHeight:Number;	private var stemPace:Number;	private var circleRadius:Number;	private var circleStartRadius:Number;	private var circleEndRadius:Number;	private var circlePace:Number;	private var startX:Number;	private var startY:Number;	private var treeNumber:Number;	private var parentMC:MovieClip;	private var thisTree:MovieClip;	function MakeTree(	sSH:Number,					sEH:Number,					sP:Number,					cSR:Number,					cER:Number,					cP:Number,					sX:Number,					sY:Number,					tN:Number,					pMC:MovieClip){	stemStartHeight=sSH;	stemEndHeight=sEH;	stemPace=sP;	circleStartRadius=cSR;	circleEndRadius=cER;	circlePace=cP;	startX=sX;	startY=sY;	treeNumber=tN;	parentMC=pMC;	//trace ("making tree number "+treeNumber);	thisTree = parentMC.createEmptyMovieClip("tree"+treeNumber,treeNumber);	//trace ("thisTree = "+thisTree);	with (thisTree){		_x=sX;	}	thisTree._y=startY;	//trace ("treeX = "+thisTree._x);	stemHeight = stemStartHeight;	circleRadius = circleStartRadius;	thisTree.classObj = this;	pMC.ground["line"+sX].tree = thisTree;	//trace (thisTree.classObj +" = classObj");	/*thisTree.onPress = function(){		subject = "hi";		getURL("mailto:info@fairparkstudio.com", "_self", "GET");	}*/	thisTree.onEnterFrame = function(){		this.classObj.growTree();	}	}function growTree(){		//trace ("grow "+thisTree);		//trace ("stemEndHeight = "+this.classObj.stemEndHeight);		var kill = true;		if (stemHeight<stemEndHeight){			stemHeight+=stemPace;			//trace ("stemHeight = "+stemHeight);			drawStem(0,0,stemHeight,thisTree);			kill = false;		}		if (circleRadius < circleEndRadius){			circleRadius+=circlePace;			//trace ("circleRadius = "+this.circleRadius);			drawCircle(0,0,circleRadius,thisTree);			kill = false;		}		if (kill){			delete thisTree.onEnterFrame;		}		thisTree.circle._y=-stemHeight-circleRadius;}function drawStem(sX,				  sY,				  sSH,				  targetMC):Void{	//trace ("drawStem");	//trace ("stem targetMC = "+targetMC);	var stem = targetMC.createEmptyMovieClip("stem",0);	with (stem){		lineStyle(.5,0x636363,100);		moveTo(sX,sY);		lineTo(sX,sY-sSH);	}}function drawCircle(sX,					sY,					r,					targetMC):Void{	var r2 = r*0.93;	var circle = targetMC.createEmptyMovieClip("circle",1);	with (circle){		lineStyle(.5,0x636363,100);		moveTo(sX-r,sY);		beginFill(0x636363,25);		curveTo(-r2,-r2,sX,sY-r);		curveTo(r2,-r2,sX+r,sY);		curveTo(r2,r2,sX,sY+r);		curveTo(-r2,r2,sX-r,sY);		endFill();	}}//end of class}